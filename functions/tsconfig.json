{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
  },
  "compileOnSave": true,
  "include": [
    "./src"
  ]
}
